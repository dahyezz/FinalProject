<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 3 Mapper DOCTYPE -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="web.dao.face.UsedDao">

	<select id="selectCntAll"
	    resultType="int">
	    SELECT count(*)
	    FROM UsedBoard_KG
	</select>
	
	
	<select id="getBoardno"
	    resultType="int">
	    SELECT usedboard_kg_seq.nextval FROM dual
	</select>
	
	
	<update id="updateHit"
	    parameterType="web.dto.UsedBoard">
	    UPDATE UsedBoard_KG
	    SET hit = hit + 1
	    WHERE boardno = #{boardno }
	</update>
	
	
	<select id="selectBoardByBoardno"
	    parameterType="int"
	    resultType="web.dto.UsedBoard">
	    <include refid="selectBoard"/>
		<!-- SELECT  
		    boardno, tag, title, product, 
		    content, writer, hit, 
		    price, writtendate
		FROM 
		    UsedBoard_KG -->
		WHERE 
		    boardno = #{boardno }
	</select>
	
	
	<insert id="write"
	    parameterType="web.dto.UsedBoard">
	    
	    <selectKey order="BEFORE" resultType="int"
			keyProperty="boardno">
				SELECT usedBoard_KG_SEQ.nextval FROM dual
		</selectKey>
	    
	    INSERT INTO UsedBoard_KG(
	        boardno, tag, title,
	        product, content, writer,
	        hit, price)
        VALUES( #{boardno }, #{tag }, #{title }, 
        #{product }, #{content }, #{writer }, 
        #{hit }, #{price }
	    )
	</insert>
	
	
	<insert id="insertImg"
		parameterType="web.dto.UsedImage">
		
		<selectKey order="BEFORE" resultType="int"
			keyProperty="usedImgNo">
				SELECT usedImg_KG_SEQ.nextval FROM dual
		</selectKey>
		
		INSERT INTO UsedImg_KG(usedimgno,
			originname, storedname, imgsize)
		VALUES(#{usedImgNo },
			#{originName }, #{storedName }, #{imgSize })
	</insert>
	
	
	<select id="selectImgByBoardno"
		parameterType="int"
		resultType="web.dto.UsedImage">
		SELECT * FROM UsedImg_KG
		WHERE boardno = #{boardno }
	</select>
	
	
	<select id="selectImgByImgno"
		parameterType="int"
		resultType="web.dto.UsedImage">
		SELECT * FROM UsedImg_KG
		WHERE usedimgno = #{usedImgNo }
	</select>
	
	
	<update id="update"
		parameterType="web.dto.UsedBoard">
		UPDATE 
			usedboard_kg
		SET 
			tag=#{tag }, title=#{title }, 
			product=#{product }, price=#{price },
			content=#{content }
		WHERE
			boardno=#{boardno }
	</update>
	
	
	<update id="updateImgno" parameterType="Map">
		UPDATE 
		    usedimg_kg
		SET
		    boardno = #{boardno }
		WHERE
			usedimgno IN
			<foreach collection="images" separator="," 
				open="(" close=")" item="val">
			${val}
			</foreach>
	</update>
	
	
	<delete id="deleteBoardByBoardno" 
		parameterType="int">
		DELETE 
		
		FROM
			usedboard_kg
		WHERE
			boardno = #{boardno }
	</delete>
	
	
	<insert id="insertComment"
		parameterType="web.dto.UsedComment">
		
		<selectKey order="BEFORE" resultType="int"
			keyProperty="commentno">
			SELECT usedcomment_kg_seq.nextval FROM dual
		</selectKey>
		
		INSERT INTO usedcomment_kg(
			commentno, boardno, writer, content )
		VALUES (#{commentno }, #{boardno }, #{writer },
			#{content } )
	</insert>
	
	
	<select id="selectAllCommentnoByBoardno"
		parameterType="web.dto.UsedBoard"
		resultType="web.dto.UsedComment">
		SELECT 
			commentno, boardno, writer, content, writtendate
		FROM 
			usedcomment_kg
		WHERE 
			boardno = #{boardno }
		ORDER BY
			commentno DESC
	</select>
	
	
	<!-- 댓글 수 가져오는 기능 -->
	<select id="CountComment"
		parameterType="web.dto.UsedComment"
		resultType="web.dto.UsedBoard">
		SELECT
			count(*)
		FROM
			usedcomment_kg
		GROUP BY
		    boardno
	</select>
	
	
	<select id="selectBoardByCommentno"
		parameterType="web.dto.UsedBoard"
		resultType="web.dto.UsedComment">
		
		SELECT
			boardno, tag, title, product, 
		    content, writer, hit, 
		    price, writtendate
		FROM
			usedboard_kg
		WHERE
			commentno = #{commentno }
		ORDER BY
			commentno DESC
	</select>
	
	
	<update id="updateComment"
		parameterType="web.dto.UsedComment">
		UPDATE
		 	usedcomment_kg
		SET
			content = #{content }
		WHERE	
			boardno = #{boardno } AND
			commentno = #{commentno }
	</update>
	
	
	<delete id="deleteComment"
		parameterType="web.dto.UsedComment">
		DELETE
		FROM
			usedcomment_kg
		WHERE
			commentno = #{commentno }
	</delete>
	
	
	<delete id="deleteCommentByBoardno"
		parameterType="int">
		
		DELETE
	
		FROM
			usedcomment_kg
		WHERE
			boardno = #{boardno }
			
	</delete>
	
	
	<delete id="deleteImgByBoardno"
		parameterType="int">
		
		DELETE
	
		FROM
			usedimg_kg
		WHERE
			boardno = #{boardno }
			
	</delete> 
	
	
	<update id="updateUsedImg_KG"
		parameterType="Map">
		UPDATE
			usedimg_kg
		SET
			boardno = #{boardno }
		WHERE
			usedimgno 
		IN
		<foreach collection="images" 
			open="(" separator="," close=")"
			item="i" >
			${i }
		</foreach>
	</update>
	
	
	<insert id="reportByBoard"
		parameterType="web.dto.BadReport">
		
		INSERT INTO badreport_kg
	    VALUES
	    (badreport_kg_seq.nextval, #{boardname }, #{boardno }, #{commetno }, #{reason }, #{nickname })
	</insert>
	
	
	<select id="selectCntBadReport"
	 parameterType="web.dto.BadReport"
	 resultType="int">
	 	SELECT 
	 	    COUNT(*)
	 	FROM
	 	    BADREPORT_KG
	 	WHERE
	 	    boardno = #{boardno }
	</select>
	
	
	
	
	
	<sql id="selectBoard">
		SELECT  
		    boardno, tag, title, product, 
		    content, writer, hit, 
		    price, writtendate, 
		    (SELECT COUNT(*) FROM UsedComment_KG WHERE boardno = UsedBoard_KG.boardno) commentCnt
		FROM 
		    UsedBoard_KG
	</sql>
	
	
	<sql id="selectSearch">
		SELECT rownum rnum, B.* FROM (
			<include refid="selectBoard" />
			WHERE 1=1
			<if test="search != null and search != ''">
				AND title LIKE '%' || #{search } || '%' 
			</if>
			ORDER BY boardno DESC
		) B
		ORDER BY rnum
	</sql>
	
	
	<select id="selectPageSearch"
		 parameterType="web.util.Paging"
		 resultType="web.dto.UsedBoard">
		 
		SELECT * FROM (
			<include refid="selectSearch" />
		) R
		WHERE rnum BETWEEN #{startNo } AND #{endNo }
		
	</select>

	<select id="countSearch"
		 parameterType="web.util.Paging"
		 resultType="int">
		 
		SELECT COUNT(*) FROM (
			<include refid="selectSearch" />
		) CNT
		
	</select>
	
	
</mapper>